<?xml version="1.0" encoding="UTF-8"?>
<theme>

	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>
	
<!-- System & Detailed View Logos -->
	<view name="system, detailed">
		<image name="logo">
			<path>./system.svg</path>
			<path>./system.png</path>
    	</image>
	</view>

<!-- Basic & Detailed System Name -->
	<view name="detailed, basic">
		<text name="systemFullName" extra="true">
			<text>Nintendo | Game Boy</text>
		</text>
	</view>
	
<!-- Description for System View -->
	<view name="system">
		<text name="systemtype" extra="true">
			<text>8-bit Handheld</text>
		</text>
		<text name="manufacturer" extra="true">
			<text>Nintendo</text>
		</text>
			<text name="releaseYear" extra="true">
		<text>19XX</text>
		</text>
	</view>

</theme>