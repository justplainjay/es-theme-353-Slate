<?xml version="1.0" encoding="UTF-8"?>
<theme>

	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>	
<!-- SYSTEM & DETAILED View Logos -->
<view name="system, detailed">

	<image name="logo">
		<path>./white.svg</path>
	</image>

</view>
<!-- BASIC & DETAILED System Name -->
<view name="detailed, basic, grid">

	<text name="systemFullName" extra="true">
		<text>Sega | Dreamcast</text>
	</text>

</view>
<!-- SYSTEM VIEW Metadata -->
<view name="system">

	<text name="manufacturer" extra="true">
		<text>Sega</text>
	</text>
	<text name="releaseYear" extra="true">
		<text>1998</text>
	</text>
	<text name="systemtype" extra="true">
		<text>32-bit Console</text>
	</text>
	
</view>

</theme>